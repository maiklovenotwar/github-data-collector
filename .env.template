# GitHub API Konfiguration
# Einzelnes Token
GITHUB_API_TOKEN=dein_github_token_hier

# Alternativ: Mehrere Tokens durch Kommas getrennt für höhere Rate Limits
# GITHUB_API_TOKENS=token1,token2,token3

# Datenbank-Konfiguration
DATABASE_URL=sqlite:///github_data.db

# Geocoding-Konfiguration
# Optional: API-Schlüssel für externe Geocoding-Dienste
# GEOCODING_API_KEY=dein_geocoding_api_key_hier

# Cache-Konfiguration
CACHE_DIR=.github_cache
CACHE_ENABLED=true
